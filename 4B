<%
if (request.getMethod().equals("POST")){ 
	String str = request.getParameter("number");
	int num=Integer.parseInt(str);
	int ori=num;
	int sum=0;
	while(num>0){
		int d=num%10;
		sum+=(d*d*d);
		num/=10;
	}
	boolean a=(sum==ori);
	if (a) {
		out.println("<p><h2>The number is Armstrong</h2></p>");
	}
	else {
		out.println("<p><h2>The number not is Armstrong</h2></p>");
	}
} 
%>
